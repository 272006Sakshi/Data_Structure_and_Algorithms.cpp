class Solution {
public:
    int minOperations(vector<int>& nums, int k) {
       // T.C: O(n)   S.C: O(1)
        int n = nums.size();
        int res = 0;
        int sum = 0;
        for(int i =0; i<n; i++){
            sum+=nums[i];
        }
        if(sum%k == 0) return 0;
        else{
            while(sum%k !=0){
                sum -= 1;
                res++;
            }
        }
        return res;
    }
};
