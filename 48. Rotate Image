class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        int n = matrix.size();
        // T.C: O(N^2)
        for(int i = 0; i<n; i++){
            for(int j = 0; j<i; j++){
                // int temp = matrix[i][j];
                // matrix[i][j] = matrix[j][i];
                // matrix[j][i] = temp;
                swap(matrix[i][j], matrix[j][i]);
            }
        }
        for(int i = 0; i<n; i++){
            // int l = 0, r = n-1;
            // while(l<r){
            //     // int temp = matrix[i][l];
            //     // matrix[i][l] = matrix[i][r];
            //     // matrix[i][r] = temp;
            //     swap(matrix[i][l], matrix[i][r]);
            //     l++;
            //     r--;
            // }
            reverse(matrix[i].begin(), matrix[i].end());
        }
    }
};
