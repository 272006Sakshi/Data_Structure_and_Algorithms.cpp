class Solution {
public:
    int fib(int n) {
        //Approach 1: T.C: O(2^N), S.C: O(N)--> recursion stack
        // if(n<=1){
        //     return n;
        // }
        // return fib(n-1) + fib(n-2);

        // Approach 2: T.C: O(N), S.C: O(N)

        // if(n<=1) return n;
        // vector<int> vec(n+1);
        // vec[0] = 0;
        // vec[1] = 1;
        // for(int i  = 2; i<=n; i++){
        //     vec[i] = vec[i-1]+vec[i-2];
        // }
        // return vec[n];

        //Approach 3: T.C: O(N), S.C:O(1)
        int num = 0;
        int first = 0;
        int sec = 1;
        for(int i = 2; i<=n; i++){
            num = first+sec;
            first = sec;
            sec = num;
        }
        return num;
    }
};
