class Solution {
public:
    int countPartitions(vector<int>& nums) {
        //T.C: O(n)
        // S.C: O(1)
        int n = nums.size();
        // int cnt = 0;

        int sum = 0;
        for(int i = 0; i<n; i++){
            sum+=nums[i];
        }
        // int currSum = 0;
        // for(int i = 0; i<n-1; i++){
        //     currSum +=nums[i];
        //     sum -= nums[i];
        //     if((sum-currSum)%2 == 0)cnt++;
        // }
        
        // return cnt;

        if(sum%2 == 0)return n-1;
        return 0;
    }
    
};
