class Solution {
public:
    vector<int> findErrorNums(vector<int>& nums) {
        int n = nums.size();
        //T.C: O(N) S.C:O(N)
        // int res1;
        // int res2;
        // unordered_map<int, int> mp;
        // for(int i = 0; i<n; i++){
        //     mp[nums[i]]++;
        // }
        // for(auto &it:mp){
        //     if(it.second>1){
        //         res1 = it.first;
                
        //     }
        // }
        // for (int i = 1; i <= n; i++) {
        //     if (mp[i] == 0) res2 = i;
        // }
        
        // return{res1, res2};

        int y = 0;

        // sum from 1 to n
        int sum1 = n * (n + 1) / 2;

        // sort the array
        sort(nums.begin(), nums.end());
        for (int i = 0; i < nums.size() - 1; ++i) {
            if (nums[i] == nums[i + 1]) {
                y = nums[i];
                nums[i] = 0;
                break;
            }
        }

        int sum2 = 0;
        for (int i = 0; i < n; ++i) {
            sum2 += nums[i];
        }

        return {y, (sum1 - sum2)};
    }
};
